<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <display-name>Global Navigation Rules</display-name>
        <from-view-id>*</from-view-id>

        <!-- Index Page -->
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/pages/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>

        <!-- Admin Pages-->
        <navigation-case>
            <from-outcome>admin-all-users</from-outcome>
            <to-view-id>/pages/admin/all-users.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>admin-user-details</from-outcome>
            <to-view-id>/pages/admin/user-details.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>admin-new-user</from-outcome>
            <to-view-id>/pages/admin/new-user.xhtml</to-view-id>
            <redirect />
        </navigation-case>

        <!-- Editor Pages -->
        <navigation-case>
            <from-outcome>editor-my-tickets</from-outcome>
            <to-view-id>/pages/editor/my-tickets.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>editor-all-tickets</from-outcome>
            <to-view-id>/pages/editor/all-tickets.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>editor-ticket-details</from-outcome>
            <to-view-id>/pages/editor/ticket-details.xhtml</to-view-id>
            <redirect />
        </navigation-case>

        <!-- Customer Pages -->
        <navigation-case>
            <from-outcome>customer-my-tickets</from-outcome>
            <to-view-id>/pages/customer/my-tickets.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>customer-all-tickets</from-outcome>
            <to-view-id>/pages/customer/company-tickets.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>customer-new-ticket</from-outcome>
            <to-view-id>/pages/customer/new-ticket.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>customer-ticket-details</from-outcome>
            <to-view-id>/pages/customer/ticket-details.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <application>
        <locale-config>
            <default-locale>de</default-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>mls.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>

</faces-config>
